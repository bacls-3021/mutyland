<span class="step">Bước 2 Đăng bài</span>
<p>Vào <a href="https://raovat49.com/dang-tin"> https://raovat49.com/dang-tin</a></p>
<div class="box">
  <code class="hightlight">
    document.getElementById('CategoryId').value = [...document.querySelectorAll("select#CategoryId > option")].filter(a => a.innerText.includes('Mua bán nhà đất'))[0].value
    $('#quilleditor-buffer').val(<%= inra(@product.description) %>)
    document.getElementById('Name').value = <%= inra(@product.title) %>
    document.getElementById('CustomerPhone').value = <%= inra(@product.phone) %>

    const dataTransfer = new DataTransfer();
    const change = new Event ('change');
   <% product.product_images.each_with_index do |img, i| %>
      <% break if i == 12 %>
      const url<%= i %> = <%= inra(img.full_url) %>
      const fileName<%= i %> = <%= inra("myFile#{i}.jpg") %>

      fetch(url<%= i %>)
        .then(async response => {
          const contentType<%= i %> = response.headers.get('content-type')
          const blob<%= i %> = await response.blob()
          const file<%= i %> = new File([blob<%= i %>], fileName<%= i %>, { contentType<%= i %> })
          dataTransfer.items.add(file<%= i %>);
      })
      setTimeout(function(){
        document.getElementById('PhotoFile<%= i+1 %>').files = dataTransfer.files
        document.getElementById('PhotoFile<%= i+1 %>').dispatchEvent(change)
      }, 1000)
    <% end %>
  </code>
  <button class="btn btn-primary copy" onClick="copy(this)">Copy</button>
</div>
